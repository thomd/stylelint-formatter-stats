{
  "name": "stylelint-formatter-stats",
  "version": "0.3.0",
  "description": "A custom formatter which shows aggregated statistics of Stylelint errors.",
  "main": "index.js",
  "scripts": {
    "lint": "xo --no-semicolon --space",
    "precommit": "npm run -s lint",
    "test": "ava test -v",
    "test:visual": "stylelint --config test/fixtures/config.json test/fixtures/*.scss --custom-formatter ."
  },
  "keywords": [
    "stylelint",
    "formatter",
    "stats",
    "statistic"
  ],
  "author": {
    "email": "thomduerr@gmail.com",
    "name": "Thomas Duerr",
    "url": "http://git.io/thomd"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/thomd/stylelint-formatter-stats.git"
  },
  "bugs": {
    "url": "https://github.com/thomd/stylelint-formatter-stats/issues"
  },
  "license": "MIT",
  "dependencies": {
    "chalk": "^2.3.0",
    "lodash": "^4.17.4",
    "plur": "^2.1.2",
    "printf": "^0.2.5"
  },
  "devDependencies": {
    "ava": "^0.23.0",
    "husky": "^0.14.3",
    "strip-ansi": "^4.0.0",
    "stylelint": "^8.2.0",
    "xo": "^0.18.2"
  }
}
